<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".GroupMaking">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:weightSum="4">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:gravity="center"
            android:text="Group Name :"
            android:textFontWeight="650"
            android:fontFamily="@font/cafe"
            android:textColor="#42C2FF"
            android:textSize="18sp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1.9"
            android:gravity="center"
            android:hint="Enter Group Name"
            android:textColor="@color/black"
            android:fontFamily="@font/cafe"
            android:textSize="16sp"
            android:id="@+id/group_name"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:weightSum="4">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45" />

        <ImageButton
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:background="@drawable/search"
            android:id="@+id/searchBtn"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25" />

        <EditText
            android:id="@+id/enterName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.8"
            android:gravity="center"
            android:hint="Enter Nick Name"
            android:fontFamily="@font/cafe"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

    </LinearLayout>

    <!--여기에 검색되는 리스트-->

    <!--여기에 검색되는 리스트-->

    <!--    <TextView-->
    <!--        android:id="@+id/search_list"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="0dp"-->
    <!--        android:layout_marginHorizontal="40dp"-->
    <!--        android:layout_marginTop="10dp"-->
    <!--        android:layout_weight="2.0"-->
    <!--        android:gravity="center_horizontal"-->
    <!--        android:hint="SEARCH" />-->
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2.0"
        android:gravity="center_horizontal"
        android:hint="SEARCH"
        android:fontFamily="@font/cafe"
        android:id="@+id/searchList"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:orientation="horizontal"
        android:weightSum="4">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Members"
            android:textColor="#42C2FF"
            android:fontFamily="@font/cafe"
            android:textFontWeight="650"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.6"
        android:orientation="horizontal"
        android:weightSum="4">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4" />

        <!--        그룹 하나 보여주는 레이아웃-->
        <HorizontalScrollView
            android:id="@+id/memberScroll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.4"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/memberList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>

        </HorizontalScrollView>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="COMPLETE"
            android:background="@drawable/get_img_btn"
            android:backgroundTint="#4294ff"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:id="@+id/complete"
            android:textFontWeight="650"
            android:fontFamily="@font/cafe"/>

    </LinearLayout>

</LinearLayout>