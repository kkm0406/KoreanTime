<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firstmenu"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="W.A.Y"
                android:fontFamily="@font/cafebold"
                android:textColor="#42C2FF"
                android:textSize="50sp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:fontFamily="@font/cafe"
                    android:paddingTop="1mm"
                    android:id="@+id/name"
                    android:text="Name" />
            </LinearLayout>
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.5">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:layout_marginHorizontal="25dp"

                app:orientation="horizontal"
                app:alignmentMode="alignBounds"
                app:columnCount="2">
                <LinearLayout
                    android:id="@+id/edit"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/frame_shadow"
                    android:orientation="vertical"
                    app:layout_gravity="left">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#42C2FF"
                        android:fontFamily="@font/cafe"
                        android:text="Edit Profile"
                        android:textFontWeight="650"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:paddingTop="20dp"/>
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/wrench"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/frame_shadow"
                    android:id="@+id/makeGroup"
                    android:orientation="vertical"
                    app:layout_gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#42C2FF"
                        android:fontFamily="@font/cafe"
                        android:text="Make Group"
                        android:textFontWeight="650"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:paddingTop="20dp"/>
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:src="@drawable/make"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"/>

                </LinearLayout>

            </GridLayout
>

        </ScrollView>




    </LinearLayout>


</LinearLayout>