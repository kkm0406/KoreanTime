<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFFFFD"
    tools:context=".edit"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="8.5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:text="Edit Profile"
            android:textSize="27sp"
            android:textColor="#42C2FF"
            android:fontFamily="@font/cafe"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textFontWeight="650"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_marginTop="30dp"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/user"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:id="@+id/name"
                    android:fontFamily="@font/cafe"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(click to change)"
                android:textSize="17sp"
                android:textColor="#757575"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:fontFamily="@font/cafe"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:weightSum="7"
            android:gravity="center"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="18sp"
                android:textColor="#42C2FF"
                android:fontFamily="@font/cafe"
                android:textFontWeight="650"/>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint=""
                android:gravity="center"
                android:textSize="16sp"
                android:id="@+id/address1"
                android:fontFamily="@font/cafe"/>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:foreground="@drawable/exchange"
                android:id="@+id/chAd1"/>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"/>


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:weightSum="7"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Address 2."
                android:textSize="18sp"
                android:textColor="#42C2FF"
                android:fontFamily="@font/cafe"
                android:textFontWeight="650"/>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.6"
                android:hint=""
                android:gravity="center"
                android:textSize="16sp"
                android:id="@+id/address2"
                android:fontFamily="@font/cafe"/>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:foreground="@drawable/exchange"
                android:id="@+id/chAd2"/>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:visibility="gone"
            android:weightSum="7"
            android:gravity="center"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Address 3."
                android:textSize="18sp"
                android:textColor="#42C2FF"
                android:fontFamily="@font/cafe"
                android:textFontWeight="650"/>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.6"
                android:hint=""
                android:gravity="center"
                android:textSize="16sp"
                android:id="@+id/address3"
                android:fontFamily="@font/cafe"/>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:foreground="@drawable/exchange"
                android:id="@+id/chAd3"/>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Confirm"
                android:background="@drawable/get_img_btn"
                android:backgroundTint="#4294ff"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:id="@+id/confirm"
                android:textFontWeight="650"
                android:fontFamily="@font/cafe"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>